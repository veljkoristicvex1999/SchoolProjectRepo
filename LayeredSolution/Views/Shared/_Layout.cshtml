<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        if (User.IsInRole("Admin"))
                        {
                            ViewBag.Name = User.Identity.Name;

                            <li>@Html.ActionLink(User.Identity.Name, "Index", "Admin")</li>
                            <li>@Html.ActionLink("FacultyStudent", "Index", "FacultyStudent")</li>
                            <li>@Html.ActionLink("HighSchoolStudents", "Index", "HighSchoolStudents")</li>
                            <li>@Html.ActionLink("Professor", "Index", "Professor")</li>
                        }
                        if (User.IsInRole("Professor"))
                        {
                            <li>@Html.ActionLink("Professor", "Index", "Professor")</li>
                            <li>@Html.ActionLink("FacultyStudent", "Index", "FacultyStudent")</li>
                            <li>@Html.ActionLink("HighSchoolStudents", "Index", "HighSchoolStudents")</li>
                        }
                        if (User.IsInRole("Facullty"))
                        {
                            <li>@Html.ActionLink("FacultyStudent", "Index", "FacultyStudent")</li>
                        }
                        if (User.IsInRole("HighSchool"))
                        {
                            <li>@Html.ActionLink("HighSchoolStudents", "Index", "HighSchoolStudents")</li>
                        }
                    }
                    else

                    {

                        <li>@Html.ActionLink("Login", "Login", "Login")</li>
                    }








                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
